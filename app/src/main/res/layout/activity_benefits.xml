<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_world"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".ui.benefits.view.BenefitsActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="@dimen/margin_16"
        android:id="@+id/lottieAnimationView"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerInside"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/shining_star"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBenefitsButtons"
        android:layout_width="@dimen/margin_250"
        android:layout_height="@dimen/margin_250"
        android:layout_margin="@dimen/margin_8"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView"
        tools:itemCount="4"
        tools:listitem="@layout/benefits_item" />

    <ProgressBar
        android:id="@+id/pbLoadingBenefits"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>