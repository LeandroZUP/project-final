<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_world">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivPrograms"
            android:layout_width="@dimen/margin_250"
            android:layout_height="@dimen/margin_250"
            android:layout_marginTop="@dimen/margin_108"
            android:contentDescription="@string/description_image_detail_programs"
            android:src="@drawable/ic_estrela_fora_da_caixa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDetailPrograms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_48"
            android:text="@string/text_detail_programs"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/size_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivPrograms" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>