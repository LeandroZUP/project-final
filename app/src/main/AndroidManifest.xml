<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.zup.hellozupper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelloZupper"
        tools:targetApi="31">
        <activity
            android:name=".PillarsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.register.view.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.feed.view.FeedActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.view.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.view.HomeActivity"
            android:exported="false" />
        <activity
            android:name="br.com.zup.hellozupper.ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.HelloZupper.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>